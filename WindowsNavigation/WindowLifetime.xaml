<Window x:Class="WindowsNavigation.WindowLifetime"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsNavigation"
        mc:Ignorable="d"
        Title="WindowLifetime" Height="300" Width="300">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">生命演示周期</TextBlock>
        <ScrollViewer   Grid.Row="1"  VerticalScrollBarVisibility="Visible" Name="sv1" >
            <TextBox Name="txtLifeTime"  TextWrapping="Wrap" Width="800" Height="1000" />
        </ScrollViewer>
    </Grid>
</Window>
