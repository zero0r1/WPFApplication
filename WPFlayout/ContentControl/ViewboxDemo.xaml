<Window x:Class="WPFlayout.ContentControl.ViewboxDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFlayout.ContentControl"
        mc:Ignorable="d"
        Title="ViewboxDemo" Height="300" Width="300">
    <Viewbox Stretch="Fill">
        <Grid>
            <Canvas Height="200" Width="200">
                <Ellipse Width="100" Height="50" Fill="Blue" Canvas.Left="10" Canvas.Top="25"/>
                <Ellipse Width="100" Height="50" Fill="Blue" Canvas.Left="10" Canvas.Top="100" StrokeThickness="4" Stroke="Black"/>
                <Ellipse Width="50" Height="50" Fill="Blue" Canvas.Left="135" Canvas.Top="25"/>
                <Ellipse Width="50" Height="50" Canvas.Left="135" Canvas.Top="100"/>
            </Canvas>
        </Grid>
    </Viewbox>
</Window>
