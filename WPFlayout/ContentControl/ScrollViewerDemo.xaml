<Window x:Class="WPFlayout.ContentControl.ScrollViewerDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFlayout.ContentControl"
        mc:Ignorable="d"
        Title="ScrollViewerDemo" Height="300" Width="300">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <!--在 ScrollViewer 中放置一个 Grid, 使其高度大于 ScrollViewer, 就是窗体的高度-->
        <Grid Height="400" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--在 Grid 每一行都放置一个按钮-->
            <Button Name="button1" >Button</Button>
            <Button Name="button2" Grid.Row="1" >Button</Button>
            <Button Name="button3" Grid.Row="2">Button</Button>
            <Button Name="button4" Grid.Row="3">Button</Button>
            <Button Name="button5" Grid.Row="4">Button</Button>
        </Grid>
    </ScrollViewer>

</Window>
